-- T·∫°o n√∫t ch·ªçn m·ª©c (click ƒë·ªÉ chuy·ªÉn)
local function CreateSelector(name, y, opts, defIdx, callback)
    local cont = Instance.new("Frame")
    cont.Size = UDim2.new(1,0,0,48)
    cont.Position = UDim2.new(0,0,0,y)
    cont.BackgroundTransparency = 1
    cont.Parent = content
    
    local lab = Instance.new("TextLabel")
    lab.Size = UDim2.new(0.58,0,1,0)
    lab.BackgroundTransparency = 1
    lab.Text = name
    lab.TextColor3 = Color3.fromRGB(230,230,250)
    lab.TextSize = 19
    lab.Font = Enum.Font.GothamSemibold
    lab.TextXAlignment = Enum.TextXAlignment.Left
    lab.Parent = cont
    
    local valLab = Instance.new("TextLabel")
    valLab.Size = UDim2.new(0.42,0,1,0)
    valLab.Position = UDim2.new(0.58,0,0,0)
    valLab.BackgroundTransparency = 1
    valLab.Text = opts[defIdx] .. (name:find("T·ªëc") and "" or "m")
    valLab.TextColor3 = Color3.fromRGB(140, 255, 200)
    valLab.TextSize = 19
    valLab.Font = Enum.Font.GothamBold
    valLab.TextXAlignment = Enum.TextXAlignment.Right
    valLab.Parent = cont
    
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1,0,1,0)
    btn.BackgroundTransparency = 1
    btn.Text = ""
    btn.Parent = cont
    
    local curIdx = defIdx
    
    btn.MouseButton1Click:Connect(function()
        curIdx = curIdx + 1
        if curIdx > #opts then curIdx = 1 end
        valLab.Text = opts[curIdx] .. (name:find("T·ªëc") and "" or "m")
        callback(opts[curIdx])
    end)
    
    btn.MouseEnter:Connect(function()
        cont.BackgroundColor3 = Color3.fromRGB(45,45,60)
        cont.BackgroundTransparency = 0.65
    end)
    btn.MouseLeave:Connect(function()
        cont.BackgroundTransparency = 1
    end)
end

CreateSelector("T·ªëc ƒë·ªô ch·∫°y", 0,   speedOptions, 1, function(v) Settings.SpeedLevel = v end)
CreateSelector("Nh·∫£y cao",     55,  jumpOptions,  1, function(v) Settings.JumpLevel  = v end)

