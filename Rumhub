-- Logic ch√≠nh m·ªói frame
rs.RenderStepped:Connect(function()
    if not hum or not hrp then return end
    
    hum.WalkSpeed = 16 * Settings.SpeedLevel
    hum.JumpPower = 50 * Settings.JumpLevel   -- ‚âà nh·∫£y cao t∆∞∆°ng ·ª©ng
    
    if Settings.Godmode then
        hum.MaxHealth = math.huge
        hum.Health = math.huge
    elseif hum.MaxHealth == math.huge then
        hum.MaxHealth = 100
        hum.Health = 100
    end
    
    -- Auto Dodge c∆° b·∫£n (n√© v·∫≠t bay t·ªõi nhanh)
    if Settings.AutoDodge then
        for _, part in ipairs(ws:GetDescendants()) do
            if part:IsA("BasePart") and part \~= hrp and part.AssemblyLinearVelocity.Magnitude > 80 then
                local dist = (part.Position - hrp.Position).Magnitude
                if dist < 35 and dist > 3 then
                    local toPlayer = (hrp.Position - part.Position).Unit
                    local velDir = part.AssemblyLinearVelocity.Unit
                    
                    local dot = toPlayer:Dot(velDir)
                    if dot > 0.85 then  -- ƒëang bay g·∫ßn th·∫≥ng v√†o ng∆∞·ªùi ch∆°i
                        -- N√© ngang ho·∫∑c nh·∫£y
                        local side = hrp.CFrame.RightVector * (math.random() > 0.5 and 25 or -25)
                        hrp.CFrame = hrp.CFrame + side + Vector3.new(0, math.random(8,20), 0)
                        task.wait(0.08)  -- ch·ªëng spam n√© qu√° nhanh
                        break
                    end
                end
            end
        end
    end
end)

-- Respawn x·ª≠ l√Ω
player.CharacterAdded:Connect(function(new)
    char = new
    hum = new:WaitForChild("Humanoid")
    hrp = new:WaitForChild("HumanoidRootPart")
end)

-- K√©o GUI
local dragging, dragStart, startPos
titleBar.InputBegan:Connect(function(inp)
    if inp.UserInputType == Enum.UserInputType.MouseButton1 or inp.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = inp.Position
        startPos = frame.Position
    end
end)

titleBar.InputEnded:Connect(function(inp)
    if inp.UserInputType == Enum.UserInputType.MouseButton1 or inp.UserInputType == Enum.UserInputType.Touch then
        dragging = false
    end
end)

uis.InputChanged:Connect(function(inp)
    if dragging and (inp.UserInputType == Enum.UserInputType.MouseMovement or inp.UserInputType == Enum.UserInputType.Touch) then
        local delta = inp.Position - dragStart
        frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- ƒê√≥ng & toggle GUI
closeBtn.MouseButton1Click:Connect(function()
    sg:Destroy()
end)

uis.InputBegan:Connect(function(inp)
    if inp.KeyCode == Enum.KeyCode.Insert then
        sg.Enabled = not sg.Enabled
    end
end)

