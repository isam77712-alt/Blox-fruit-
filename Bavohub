local bodyvel_Name = "FlingVelocity"

local strength = 1000000000000  -- Gi·∫£m xu·ªëng 1e12 (v·∫´n n√©m c·ª±c m·∫°nh, bay xa map, √≠t crash h∆°n 1e100)

local fling = true

local espEnabled = false  -- Toggle ESP

-- 7 M√ÄU C·∫¶U V√íNG

