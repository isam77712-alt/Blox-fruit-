-- Super Fling Toggle

SuperFling.MouseButton1Click:Connect(function()

    if fling then

        fling = false

        SuperFling.Text = "Super Fling: OFF!"

        SuperFling.BackgroundColor3 = Color3.fromRGB(255, 0, 0)

        SuperFling.TextStrokeColor3 = Color3.fromRGB(255, 0, 0)

    else

        fling = true

        SuperFling.Text = "Super Fling: ON!"

        SuperFling.BackgroundColor3 = Color3.fromRGB(18, 255, 6)

        SuperFling.TextStrokeColor3 = Color3.fromRGB(18, 255, 6)

    end

end)

-- Rainbow ESP Toggle

RainbowESP.MouseButton1Click:Connect(function()

    espEnabled = not espEnabled

    if espEnabled then

        RainbowESP.Text = "Rainbow ESP: ON üåà"

        RainbowESP.BackgroundColor3 = Color3.fromRGB(0, 255, 255)

        RainbowESP.TextStrokeColor3 = Color3.fromRGB(0, 255, 255)

        print("Rainbow ESP ON - T·∫•t c·∫£ nh√¢n v·∫≠t glow 7 m√†u!")

    else

        RainbowESP.Text = "Rainbow ESP: OFF"

        RainbowESP.BackgroundColor3 = Color3.fromRGB(255, 0, 255)

        RainbowESP.TextStrokeColor3 = Color3.fromRGB(255, 0, 255)

        -- Destroy t·∫•t c·∫£ Highlights

        for _, plr in pairs(Players:GetPlayers()) do

            if plr.Character then

                local highlight = plr.Character:FindFirstChild("Highlight")

                if highlight then highlight:Destroy() end

            end

        end

        print("Rainbow ESP OFF")

    end

end)

-- Auto apply Highlight khi player join/respawn

local function applyHighlight(plr)

    if plr == LocalPlayer or not espEnabled then return end

    if not plr.Character then return end

    

    local highlight = plr.Character:FindFirstChild("Highlight")

    if not highlight then

        highlight = Instance.new("Highlight")

        highlight.Name = "Highlight"

        highlight.Adornee = plr.Character

        highlight.FillTransparency = 0.4

        highlight.OutlineTransparency = 0

        highlight.Parent = plr.Character

    end

end

-- Connect cho t·∫•t c·∫£ players

for _, plr in pairs(Players:GetPlayers()) do

    plr.CharacterAdded:Connect(function() 

        task.wait(1)  -- ƒê·ª£i load

        applyHighlight(plr) 

    end)

    if plr.Character then applyHighlight(plr) end

end

Players.PlayerAdded:Connect(function(plr)

    plr.CharacterAdded:Connect(function() 

        task.wait(1)

        applyHighlight(plr) 

    end)

end)

-- Cycle 7 m√†u m∆∞·ª£t m√†

local colorConnection

colorConnection = RunService.RenderStepped:Connect(function()

    if not espEnabled then return end

    

    local colorIndex = math.floor((tick() * 5) % #rainbowColors) + 1

    

    for _, plr in pairs(Players:GetPlayers()) do

        if plr.Character and plr.Character:FindFirstChild("Highlight") then

            local highlight = plr.Character.Highlight

            highlight.FillColor = rainbowColors[colorIndex]

            highlight.OutlineColor = rainbowColors[colorIndex]

        end

    end

end)

-- Super Fling logic (ƒë√£ ch·ªânh l·ª±c n√©m l√™n c·ª±c m·∫°nh nh∆∞ng ·ªïn ƒë·ªãnh h∆°n)

Workspace.ChildAdded:Connect(function(model)

    if model.Name == "GrabParts" then

        local part_to_impulse = model["GrabPart"]["WeldConstraint"].Part1

        if part_to_impulse then

            print("Part found!")

            local velocityObj = Instance.new("BodyVelocity", part_to_impulse)

            

            model:GetPropertyChangedSignal("Parent"):Connect(function()

                if not model.Parent then

                    if fling then

                        print("Launched v·ªõi l·ª±c c·ª±c m·∫°nh!")

                        velocityObj.MaxForce = Vector3.new(math.huge, math.huge, math.huge)

                        velocityObj.Velocity = Workspace.CurrentCamera.CFrame.lookVector * strength

                        Debris:AddItem(velocityObj, 1)

                    else

                        velocityObj.MaxForce = Vector3.new(0,0,0)

                        Debris:AddItem(velocityObj, 1)

                        print("Cancel Launch!")

                    end

                end

            end)

        end

    end

end)

print("FTAP HUB LOADED! Super Fling (l·ª±c 1e12 - ch·ªânh l√™n cao h∆°n n·∫øu mu·ªën) + Rainbow ESP s·∫µn s√†ng!")
print("Nh·∫•n Rainbow ESP ƒë·ªÉ b·∫≠t - Nh√¢n v·∫≠t kh√°c glow c·∫ßu v·ªìng si√™u d·ªÖ th·∫•y!")
